extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 2rem 1rem;
      max-width: 50rem;
      margin: 0 auto;
      width: 100%;
    }
    .status-msg {
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      text-align: center;
      margin-bottom: 1rem;
    }
    .status-msg.loading {
      background: #e0e7ff;
      color: #3730a3;
    }
    .status-msg.error {
      background: #fee2e2;
      color: #b91c1c;
    }
    .section-header {
      font-size: 1rem;
      font-weight: 600;
      margin: 1.5rem 0 0.75rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #e5e7eb;
    }
    .section-header.bad {
      color: #b91c1c;
    }
    .section-header.good {
      color: #065f46;
    }
    .torrent-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .torrent-card {
      background: var(--secondary);
      border-radius: 0.5rem;
      padding: 1rem;
    }
    .torrent-card.bad {
      border-left: 3px solid #f59e0b;
    }
    .torrent-card.good {
      border-left: 3px solid #22c55e;
    }
    .torrent-name {
      font-weight: 500;
      font-size: 0.875rem;
      word-break: break-word;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .path-row {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.375rem;
      align-items: flex-start;
    }
    .path-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      color: var(--muted);
      min-width: 4rem;
      padding-top: 0.25rem;
    }
    .path-value {
      font-size: 0.75rem;
      font-family: monospace;
      word-break: break-all;
      flex: 1;
    }
    .path-value.current {
      color: #b91c1c;
    }
    .path-value.expected {
      color: #065f46;
    }
    .path-value.match {
      color: #065f46;
    }
    .sample-file {
      margin-top: 0.5rem;
      padding-top: 0.5rem;
      border-top: 1px solid #e5e7eb;
      font-size: 0.7rem;
      font-family: monospace;
      color: var(--muted);
      word-break: break-all;
    }
    .actions {
      margin-top: 0.75rem;
      display: flex;
      gap: 0.5rem;
    }
    .fix-btn {
      padding: 0.5rem 1rem;
      font-size: 0.75rem;
      background: var(--primary);
      color: var(--primary-fg);
      border: none;
      border-radius: 0.25rem;
      cursor: pointer;
    }
    .fix-btn:hover {
      opacity: 0.9;
    }
    .fix-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .empty-state {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .issue-badge {
      font-size: 0.65rem;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      background: #fef3c7;
      color: #92400e;
    }
    .count {
      font-weight: normal;
      color: var(--muted);
    }

  .container
    #content
      .status-msg.loading Загрузка...

  script.
    const issueLabels = {
      'wrong_base_path': 'Неверный базовый путь',
      'wrong_folder_name': 'Неверное имя папки',
      'wrong_season_folder': 'Неверная папка сезона',
      'wrong_show_path': 'Неверный путь шоу'
    };

    async function loadPlacements() {
      const container = document.getElementById('content');

      try {
        const response = await fetch('/api/placement');
        if (!response.ok) throw new Error('Failed to load');

        const { misplaced, correct } = await response.json();

        let html = '';

        // Misplaced section
        html += `<div class="section-header bad">Требуют исправления <span class="count">(${misplaced.length})</span></div>`;
        if (misplaced.length === 0) {
          html += '<div class="empty-state">Все торренты размещены правильно</div>';
        } else {
          html += '<div class="torrent-list">';
          for (const t of misplaced) {
            html += renderTorrentCard(t, true);
          }
          html += '</div>';
        }

        // Correct section
        html += `<div class="section-header good">Размещены правильно <span class="count">(${correct.length})</span></div>`;
        if (correct.length === 0) {
          html += '<div class="empty-state">Нет правильно размещённых торрентов</div>';
        } else {
          html += '<div class="torrent-list">';
          for (const t of correct) {
            html += renderTorrentCard(t, false);
          }
          html += '</div>';
        }

        container.innerHTML = html;
      } catch (err) {
        container.innerHTML = '<div class="status-msg error">Ошибка загрузки</div>';
      }
    }

    function renderTorrentCard(t, isBad) {
      const cardClass = isBad ? 'bad' : 'good';
      const issueHtml = isBad ? `<span class="issue-badge">${issueLabels[t.issue] || t.issue}</span>` : '';

      let pathsHtml;
      if (isBad) {
        pathsHtml = `
          <div class="path-row">
            <span class="path-label">Сейчас</span>
            <span class="path-value current">${escapeHtml(t.currentPath)}</span>
          </div>
          <div class="path-row">
            <span class="path-label">Должно</span>
            <span class="path-value expected">${escapeHtml(t.expectedPath)}</span>
          </div>
        `;
      } else {
        pathsHtml = `
          <div class="path-row">
            <span class="path-label">Путь</span>
            <span class="path-value match">${escapeHtml(t.currentPath)}</span>
          </div>
        `;
      }

      const actionsHtml = isBad ? `
        <div class="actions">
          <button class="fix-btn" onclick="fixPlacement('${t.hash}', this)">Исправить</button>
        </div>
      ` : '';

      return `
        <div class="torrent-card ${cardClass}" data-hash="${t.hash}">
          <div class="torrent-name">
            ${escapeHtml(t.name)}
            ${issueHtml}
          </div>
          ${pathsHtml}
          <div class="sample-file">${escapeHtml(t.sampleFile)}</div>
          ${actionsHtml}
        </div>
      `;
    }

    async function fixPlacement(hash, btn) {
      btn.disabled = true;
      btn.textContent = 'Исправляем...';

      try {
        const response = await fetch(`/api/placement/fix/${hash}`, { method: 'POST' });
        if (!response.ok) throw new Error('Failed to fix');

        // Reload to show updated state
        loadPlacements();
      } catch (err) {
        btn.disabled = false;
        btn.textContent = 'Ошибка - повторить';
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    loadPlacements();
