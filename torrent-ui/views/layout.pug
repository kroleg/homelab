doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Downloads
    style.
      * { box-sizing: border-box; margin: 0; padding: 0; }
      :root {
        --background: #fff;
        --foreground: #0a0a0b;
        --primary: #e11d48;
        --primary-fg: #fff1f2;
        --secondary: #f4f4f5;
        --secondary-fg: #18181b;
        --muted: #71717a;
        --success: #22c55e;
        --warning: #f59e0b;
      }
      body {
        font-family: system-ui, -apple-system, sans-serif;
        background: var(--background);
        color: var(--foreground);
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
      }
      .back-link {
        position: fixed;
        top: 1rem;
        left: 1rem;
        color: var(--muted);
        text-decoration: none;
        font-size: 0.875rem;
        z-index: 10;
      }
      .back-link:hover { color: var(--foreground); }
      .user-name {
        position: fixed;
        top: 1rem;
        right: 1rem;
        color: var(--muted);
        font-size: 0.875rem;
        z-index: 10;
      }
  body
    a.back-link(href="http://dom.internal") ← Домой
    if userProfile
      .user-name= userProfile.name
    block content
