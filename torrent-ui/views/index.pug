extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 2rem 1rem;
      max-width: 40rem;
      margin: 0 auto;
      width: 100%;
    }
    .header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .title {
      font-size: 1.5rem;
      font-weight: 700;
    }
    .free-space {
      font-size: 0.75rem;
      color: var(--muted);
      margin-top: 0.25rem;
    }
    .drop-zone {
      border: 2px dashed var(--muted);
      border-radius: 0.75rem;
      padding: 2rem;
      text-align: center;
      margin-bottom: 1.5rem;
      transition: border-color 0.15s, background 0.15s;
      cursor: pointer;
    }
    .drop-zone:hover,
    .drop-zone.drag-over {
      border-color: var(--primary);
      background: var(--primary-fg);
    }
    .drop-zone-text {
      color: var(--muted);
      font-size: 0.875rem;
    }
    .drop-zone-text strong {
      color: var(--primary);
    }
    .error-msg {
      background: #fee2e2;
      color: #b91c1c;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }
    .torrent-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .torrent-card {
      background: var(--secondary);
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      position: relative;
      overflow: hidden;
    }
    .torrent-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      width: var(--progress, 0%);
      background: #d1d5db;
      transition: width 0.3s;
    }
    .torrent-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 0.5rem;
      position: relative;
      z-index: 1;
    }
    .torrent-name {
      font-weight: 500;
      font-size: 0.875rem;
      word-break: break-word;
      flex: 1;
    }
    .torrent-progress {
      font-size: 0.75rem;
      white-space: nowrap;
    }
    .move-buttons {
      display: flex;
      gap: 0.5rem;
      margin-top: 0.5rem;
      position: relative;
      z-index: 1;
    }
    .move-btn {
      flex: 1;
      padding: 0.5rem;
      font-size: 0.75rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      background: #fff;
      cursor: pointer;
      transition: background 0.15s, border-color 0.15s;
    }
    .move-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .watch-link {
      font-size: 0.75rem;
      text-decoration: none;
      white-space: nowrap;
      color: var(--primary);
    }
    .watch-link:hover {
      text-decoration: underline;
    }
    .empty-state {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    input[type="file"] { display: none; }
    .fix-paths-section {
      margin-top: 1.5rem;
      padding-top: 1rem;
      border-top: 1px solid #e5e7eb;
    }
    .fix-paths-btn {
      width: 100%;
      padding: 0.75rem;
      font-size: 0.875rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      background: #fff;
      cursor: pointer;
      transition: background 0.15s, border-color 0.15s;
    }
    .fix-paths-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .fix-paths-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .magnet-input {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
    .magnet-input input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      outline: none;
    }
    .magnet-input input:focus {
      border-color: var(--primary);
    }
    .magnet-input button {
      padding: 0.75rem 1rem;
      background: var(--primary);
      color: var(--primary-fg);
      border: none;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
    }
    .magnet-input button:hover {
      opacity: 0.9;
    }
    .or-divider {
      text-align: center;
      color: var(--muted);
      font-size: 0.75rem;
      margin-bottom: 1rem;
    }

  .container
    .header
      .title Загрузки
      if freeSpace
        .free-space Свободно: #{freeSpace}

    .magnet-input
      input#magnet-url(type="text" placeholder="Вставьте magnet-ссылку..." onkeydown="if(event.key==='Enter')addMagnet()")
      button(onclick="addMagnet()") Добавить

    .or-divider или

    #drop-zone.drop-zone(onclick="document.getElementById('file-input').click()")
      .drop-zone-text
        | Перетащите
        strong  .torrent
        |  файл или нажмите для выбора
      input#file-input(type="file" accept=".torrent" onchange="handleFileSelect(event)")

    if error
      .error-msg= error

    .torrent-list
      if torrents.length === 0
        .empty-state Нет активных загрузок
      else
        each t in torrents
          - var tooltipPath = t.relativePath + (t.contentFolder ? ' / ' + t.contentFolder : '')
          - var tooltip = tooltipPath + '\n' + t.progressPercent + '% • ' + t.displayState
          .torrent-card(data-hash=t.hash data-progress=t.progressPercent data-state=t.displayState title=tooltip style=`--progress: ${t.progressPercent}%` class=(t.progressPercent === 100 ? 'complete' : ''))
            .torrent-header
              .torrent-name= t.displayName
              if t.progressPercent < 100
                span.torrent-progress #{t.progressPercent}%
              else if t.jellyfinLink
                a.watch-link(href=t.jellyfinLink target="_blank") Смотреть ❯
            if t.showMoveButtons
              .move-buttons
                if t.suggestTvShows
                  button.move-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this)` data-name=t.name) → Сериалы
                else
                  button.move-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this)` data-name=t.name) → Сериалы
                  button.move-btn(onclick=`moveTorrent('${t.hash}', 'movies', this)` data-name=t.name) → Фильмы

    if torrents.length > 0
      .fix-paths-section
        button.fix-paths-btn(onclick="fixAllPaths(this)") Исправить пути для всех

  script.
    async function addMagnet() {
      const input = document.getElementById('magnet-url');
      const url = input.value.trim();
      if (!url) return;

      try {
        const response = await fetch('/api/magnet', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url })
        });

        if (response.ok) {
          location.reload();
        } else {
          alert('Ошибка добавления magnet-ссылки');
        }
      } catch (err) {
        alert('Ошибка добавления magnet-ссылки');
      }
    }

    const dropZone = document.getElementById('drop-zone');

    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('drag-over');
    });

    dropZone.addEventListener('dragleave', () => {
      dropZone.classList.remove('drag-over');
    });

    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('drag-over');
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        uploadTorrent(files[0]);
      }
    });

    function handleFileSelect(e) {
      const file = e.target.files[0];
      if (file) {
        uploadTorrent(file);
      }
    }

    async function uploadTorrent(file) {
      const formData = new FormData();
      formData.append('torrent', file);

      try {
        const response = await fetch('/api/upload', {
          method: 'POST',
          body: formData
        });

        if (response.ok) {
          location.reload();
        } else {
          alert('Ошибка загрузки торрента');
        }
      } catch (err) {
        alert('Ошибка загрузки торрента');
      }
    }

    async function moveTorrent(hash, category, btn) {
      const name = btn.dataset.name;
      try {
        const response = await fetch(`/api/move/${hash}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ category, name })
        });
        if (response.ok) {
          location.reload();
        } else {
          alert('Ошибка перемещения');
        }
      } catch (err) {
        alert('Ошибка перемещения');
      }
    }

    async function fixAllPaths(btn) {
      if (!confirm('Исправить пути для всех торрентов в tv-shows и movies?')) return;

      btn.disabled = true;
      btn.textContent = 'Исправление...';

      try {
        const response = await fetch('/api/fix-paths', { method: 'POST' });
        if (response.ok) {
          const data = await response.json();
          const fixed = data.results.filter(r => r.status === 'fixed').length;
          const skipped = data.results.filter(r => r.status === 'skipped').length;
          const errors = data.results.filter(r => r.status === 'error').length;
          alert(`Готово!\nИсправлено: ${fixed}\nПропущено: ${skipped}\nОшибок: ${errors}`);
          location.reload();
        } else {
          alert('Ошибка исправления путей');
        }
      } catch (err) {
        alert('Ошибка исправления путей');
      } finally {
        btn.disabled = false;
        btn.textContent = 'Исправить пути для всех';
      }
    }

    async function pollTorrents() {
      try {
        const response = await fetch('/api/torrents');
        if (!response.ok) return;

        const torrents = await response.json();
        const cards = document.querySelectorAll('.torrent-card');
        const currentHashes = new Set(Array.from(cards).map(c => c.dataset.hash));
        const newHashes = new Set(torrents.map(t => t.hash));

        // Reload if torrents were added or removed
        if (currentHashes.size !== newHashes.size || [...currentHashes].some(h => !newHashes.has(h))) {
          location.reload();
          return;
        }

        for (const t of torrents) {
          const card = document.querySelector(`.torrent-card[data-hash="${t.hash}"]`);
          if (!card) continue;

          // Update progress background
          card.style.setProperty('--progress', t.progress + '%');

          // Update progress text or reload if completed
          const oldProgress = card.dataset.progress;
          if (oldProgress !== String(t.progress)) {
            if (t.progress === 100 && oldProgress !== '100') {
              // Just completed - reload to show watch link
              location.reload();
              return;
            }
            const progressEl = card.querySelector('.torrent-progress');
            if (progressEl) {
              progressEl.textContent = t.progress + '%';
            }
            card.dataset.progress = t.progress;
          }

          // Update tooltip
          const oldState = card.dataset.state;
          if (oldProgress !== String(t.progress) || oldState !== t.state) {
            card.dataset.state = t.state;
            const pathPart = card.title.split('\n')[0];
            card.title = pathPart + '\n' + t.progress + '% • ' + t.state;
          }
        }
      } catch (err) {
        // Ignore polling errors
      }
    }

    setInterval(pollTorrents, 3000);
