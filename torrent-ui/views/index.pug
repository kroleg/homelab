extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 2rem 1rem;
      max-width: 40rem;
      margin: 0 auto;
      width: 100%;
    }
    .header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .free-space {
      font-size: 0.75rem;
      color: var(--muted);
      margin-top: 0.25rem;
    }
    .drop-zone {
      border: 2px dashed var(--muted);
      border-radius: 0.75rem;
      padding: 2rem;
      text-align: center;
      margin-bottom: 1.5rem;
      transition: border-color 0.15s, background 0.15s;
      cursor: pointer;
    }
    .drop-zone:hover,
    .drop-zone.drag-over {
      border-color: var(--primary);
      background: var(--primary-fg);
    }
    .drop-zone-text {
      color: var(--muted);
      font-size: 0.875rem;
    }
    .drop-zone-text strong {
      color: var(--primary);
    }
    .error-msg {
      background: #fee2e2;
      color: #b91c1c;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }
    .torrent-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .torrent-card {
      background: var(--secondary);
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      position: relative;
      overflow: hidden;
    }
    .torrent-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      width: var(--progress, 0%);
      background: #d1d5db;
      transition: width 0.3s;
    }
    .torrent-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 0.5rem;
      position: relative;
      z-index: 1;
    }
    .torrent-name {
      font-weight: 500;
      font-size: 0.875rem;
      word-break: break-word;
      flex: 1;
    }
    .torrent-progress {
      font-size: 0.75rem;
      white-space: nowrap;
    }
    .torrent-size {
      font-size: 0.75rem;
      color: var(--muted);
      white-space: nowrap;
    }
    .move-buttons {
      display: flex;
      gap: 0.5rem;
      margin-top: 0.5rem;
      position: relative;
      z-index: 1;
    }
    .move-btn {
      flex: 1;
      padding: 0.5rem;
      font-size: 0.75rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      background: #fff;
      cursor: pointer;
      transition: background 0.15s, border-color 0.15s;
    }
    .move-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .switch-btn {
      font-size: 0.65rem;
      padding: 0.25rem 0.5rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      background: #fff;
      cursor: pointer;
      white-space: nowrap;
    }
    .switch-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .empty-state {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .pending-category {
      border-left: 3px solid #f59e0b;
    }
    .category-badge {
      font-size: 0.65rem;
      background: #f59e0b;
      color: #000;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      margin-bottom: 0.25rem;
      display: inline-block;
    }
    .section {
      margin-top: 1.5rem;
    }
    .section-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 0;
      cursor: pointer;
      user-select: none;
    }
    .section-header:hover {
      color: var(--primary);
    }
    .section-toggle {
      font-size: 0.75rem;
      transition: transform 0.2s;
    }
    .section-toggle.expanded {
      transform: rotate(90deg);
    }
    .section-title {
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--muted);
    }
    .section-content {
      display: none;
    }
    .section-content.expanded {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .add-btn {
      display: block;
      padding: 0.75rem 1.5rem;
      background: var(--primary);
      color: var(--primary-fg);
      border: none;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      text-decoration: none;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .add-btn:hover {
      opacity: 0.9;
    }

  .container
    .header
      if freeSpace
        .free-space Свободно: #{freeSpace}

    a.add-btn(href="/search") Найти фильм / сериал
    a.add-btn(href="/upload" style="background: var(--secondary); color: var(--secondary-fg); margin-top: -0.75rem;") + Добавить торрент вручную

    if error
      .error-msg= error

    .torrent-list
      if torrents.length === 0 && (!sections || sections.length === 0)
        .empty-state Нет активных загрузок
      else
        each t in torrents
          +torrentCard(t)

        if sections && sections.length > 0
          each section, idx in sections
            .section
              .section-header(onclick=`toggleSection(${idx})`)
                span.section-toggle(id=`toggle-${idx}`) ▶
                span.section-title= section.title
              .section-content(id=`section-${idx}`)
                each t in section.torrents
                  +torrentCard(t)

mixin torrentCard(t)
  - var tooltipPath = t.relativePath + (t.contentFolder ? ' / ' + t.contentFolder : '')
  - var tooltip = tooltipPath + '\n' + t.progressPercent + '% • ' + t.displayState
  - var cardClasses = (t.progressPercent === 100 ? 'complete' : '') + (t.pendingCategorization ? ' pending-category' : '')
  .torrent-card(data-hash=t.hash data-progress=t.progressPercent data-state=t.displayState title=tooltip style=`--progress: ${t.progressPercent}%` class=cardClasses)
    if t.pendingCategorization
      .category-badge Выберите категорию
    .torrent-header
      .torrent-name= t.displayName
      span.torrent-size= t.displaySize
      if t.progressPercent < 100
        span.torrent-progress #{t.progressPercent}%
      else if t.currentCategory === 'tv-shows'
        button.switch-btn(onclick=`moveTorrent('${t.hash}', 'movies', this)` data-name=t.name) → Фильмы
      else if t.currentCategory === 'movies'
        button.switch-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this)` data-name=t.name) → Сериалы
    if t.showMoveButtons
      .move-buttons
        if t.suggestTvShows
          button.move-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this)` data-name=t.name) → Сериалы
        else
          button.move-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this)` data-name=t.name) → Сериалы
          button.move-btn(onclick=`moveTorrent('${t.hash}', 'movies', this)` data-name=t.name) → Фильмы

  script.
    function toggleSection(idx) {
      const content = document.getElementById(`section-${idx}`);
      const toggle = document.getElementById(`toggle-${idx}`);
      const isExpanded = content.classList.contains('expanded');

      if (isExpanded) {
        content.classList.remove('expanded');
        toggle.classList.remove('expanded');
      } else {
        content.classList.add('expanded');
        toggle.classList.add('expanded');
      }
    }

    async function moveTorrent(hash, category, btn) {
      const name = btn.dataset.name;
      try {
        const response = await fetch(`/api/move/${hash}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ category, name })
        });
        if (response.ok) {
          location.reload();
        } else {
          alert('Ошибка перемещения');
        }
      } catch (err) {
        alert('Ошибка перемещения');
      }
    }

    async function pollTorrents() {
      try {
        const response = await fetch('/api/torrents');
        if (!response.ok) return;

        const torrents = await response.json();
        const cards = document.querySelectorAll('.torrent-card');
        const currentHashes = new Set(Array.from(cards).map(c => c.dataset.hash));
        const newHashes = new Set(torrents.map(t => t.hash));

        // Reload if torrents were added or removed
        if (currentHashes.size !== newHashes.size || [...currentHashes].some(h => !newHashes.has(h))) {
          location.reload();
          return;
        }

        for (const t of torrents) {
          const card = document.querySelector(`.torrent-card[data-hash="${t.hash}"]`);
          if (!card) continue;

          // Update progress background
          card.style.setProperty('--progress', t.progress + '%');

          // Update progress text or reload if completed
          const oldProgress = card.dataset.progress;
          if (oldProgress !== String(t.progress)) {
            if (t.progress === 100 && oldProgress !== '100') {
              // Just completed - reload to show watch link
              location.reload();
              return;
            }
            const progressEl = card.querySelector('.torrent-progress');
            if (progressEl) {
              progressEl.textContent = t.progress + '%';
            }
            card.dataset.progress = t.progress;
          }

          // Update tooltip
          const oldState = card.dataset.state;
          if (oldProgress !== String(t.progress) || oldState !== t.state) {
            card.dataset.state = t.state;
            const pathPart = card.title.split('\n')[0];
            card.title = pathPart + '\n' + t.progress + '% • ' + t.state;
          }
        }
      } catch (err) {
        // Ignore polling errors
      }
    }

    setInterval(pollTorrents, 3000);
