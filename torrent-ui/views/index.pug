extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 2rem 1rem;
      max-width: 40rem;
      margin: 0 auto;
      width: 100%;
    }
    .header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .free-space {
      font-size: 0.75rem;
      color: var(--muted);
      margin-top: 0.25rem;
    }
    .drop-zone {
      border: 2px dashed var(--muted);
      border-radius: 0.75rem;
      padding: 2rem;
      text-align: center;
      margin-bottom: 1.5rem;
      transition: border-color 0.15s, background 0.15s;
      cursor: pointer;
    }
    .drop-zone:hover,
    .drop-zone.drag-over {
      border-color: var(--primary);
      background: var(--primary-fg);
    }
    .drop-zone-text {
      color: var(--muted);
      font-size: 0.875rem;
    }
    .drop-zone-text strong {
      color: var(--primary);
    }
    .error-msg {
      background: #fee2e2;
      color: #b91c1c;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }
    .torrent-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .torrent-card {
      background: var(--secondary);
      border-radius: 0.5rem;
      position: relative;
      overflow: hidden;
    }
    .torrent-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      width: var(--progress, 0%);
      background: #d1d5db;
      transition: width 0.3s;
    }
    .torrent-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      position: relative;
      z-index: 1;
      cursor: pointer;
    }
    @media (max-width: 480px) {
      .torrent-header {
        padding: 0.5rem 0.75rem;
        gap: 0.5rem;
      }
      .torrent-details {
        padding: 0 0.75rem 0.5rem;
      }
    }
    .torrent-header:active {
      background: rgba(0,0,0,0.02);
    }
    .torrent-info {
      flex: 1;
      min-width: 0;
    }
    .torrent-name {
      font-weight: 500;
      font-size: 0.875rem;
      word-break: break-word;
      line-height: 1.3;
    }
    .torrent-meta {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.125rem;
      flex-shrink: 0;
    }
    .expand-btn {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      text-align: center;
      padding: 0.125rem;
      font-size: 0.65rem;
      color: var(--primary);
      z-index: 1;
    }
    .torrent-card.expanded .expand-btn {
      display: none;
    }
    .torrent-size {
      font-size: 0.75rem;
      color: var(--muted);
      white-space: nowrap;
    }
    .torrent-category {
      font-size: 0.65rem;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      white-space: nowrap;
    }
    .torrent-category.pending {
      background: #fef3c7;
      color: #92400e;
    }
    .torrent-category.tv-shows {
      background: #dbeafe;
      color: #1e40af;
    }
    .torrent-category.movies {
      background: #fce7f3;
      color: #9d174d;
    }
    .torrent-progress {
      font-size: 0.75rem;
      font-weight: 500;
      white-space: nowrap;
    }
    .torrent-details {
      display: none;
      padding: 0 1rem 0.75rem;
      position: relative;
      z-index: 1;
    }
    .torrent-card.expanded .torrent-details {
      display: block;
    }
    .torrent-actions {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }
    .action-btn {
      flex: 1;
      padding: 0.5rem;
      font-size: 0.75rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      background: #fff;
      cursor: pointer;
      transition: background 0.15s, border-color 0.15s;
    }
    .action-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .action-btn.danger {
      flex: 0;
      color: #b91c1c;
      border-color: #fecaca;
    }
    .action-btn.danger:hover {
      background: #fef2f2;
      border-color: #f87171;
    }
    .torrent-files {
      font-size: 0.75rem;
      color: var(--muted);
    }
    .torrent-files-header {
      font-weight: 500;
      margin-bottom: 0.25rem;
      color: var(--secondary-fg);
    }
    .torrent-file {
      display: flex;
      justify-content: space-between;
      padding: 0.25rem 0;
      border-bottom: 1px solid #f3f4f6;
    }
    .torrent-file:last-child {
      border-bottom: none;
    }
    .torrent-file-name {
      word-break: break-word;
      flex: 1;
      margin-right: 0.5rem;
    }
    .torrent-file-size {
      white-space: nowrap;
    }
    .collapse-btn {
      text-align: center;
      padding: 0.5rem;
      margin-top: 0.5rem;
      color: var(--muted);
      cursor: pointer;
      font-size: 0.75rem;
      border-top: 1px solid #e5e7eb;
    }
    .collapse-btn:active {
      background: rgba(0,0,0,0.02);
    }
    .empty-state {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .pending-category {
      border-left: 3px solid #f59e0b;
    }
    .category-badge {
      font-size: 0.65rem;
      background: #f59e0b;
      color: #000;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      margin-bottom: 0.25rem;
      display: inline-block;
    }
    .section {
      margin-top: 1.5rem;
    }
    .section-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 0;
      cursor: pointer;
      user-select: none;
    }
    .section-header:hover {
      color: var(--primary);
    }
    .section-toggle {
      font-size: 0.75rem;
      transition: transform 0.2s;
    }
    .section-toggle.expanded {
      transform: rotate(90deg);
    }
    .section-title {
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--muted);
    }
    .section-content {
      display: none;
    }
    .section-content.expanded {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .add-btn {
      display: block;
      padding: 0.75rem 1.5rem;
      background: var(--primary);
      color: var(--primary-fg);
      border: none;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      text-decoration: none;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .add-btn:hover {
      opacity: 0.9;
    }
    .limit-warning {
      background: #fef3c7;
      color: #92400e;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      text-align: center;
      margin-bottom: 1.5rem;
    }

  .container
    .header
      if userProfile && userProfile.isAdmin
        .free-space Свободно: #{freeSpace}
      else if userProfile && limitRemainingGB
        .free-space Лимит: #{limitRemainingGB} ГБ

    if limitExceeded
      .limit-warning Лимит #{limitGB} ГБ превышен. Удалите что-нибудь.
    else
      a.add-btn(href="/search") Найти фильм / сериал
      if userProfile && userProfile.isAdmin
        a.add-btn(href="/upload" style="background: var(--secondary); color: var(--secondary-fg); margin-top: -0.75rem;") + Добавить торрент вручную

    if error
      .error-msg= error

    .torrent-list
      if torrents.length === 0 && (!sections || sections.length === 0)
        .empty-state Нет активных загрузок
      else
        each t in torrents
          +torrentCard(t)

        if sections && sections.length > 0
          each section, idx in sections
            .section
              .section-header(onclick=`toggleSection(${idx})`)
                span.section-toggle(id=`toggle-${idx}`) ▶
                span.section-title= section.title
              .section-content(id=`section-${idx}`)
                each t in section.torrents
                  +torrentCard(t)

mixin torrentCard(t)
  - var cardClasses = (t.progressPercent === 100 ? 'complete' : '') + (t.pendingCategorization ? ' pending-category' : '')
  .torrent-card(data-hash=t.hash data-progress=t.progressPercent data-state=t.displayState style=`--progress: ${t.progressPercent}%` class=cardClasses)
    .torrent-header(onclick="toggleTorrent(this)")
      .torrent-info
        .torrent-name= t.displayName
      .torrent-meta
        span.torrent-size= t.displaySize
        if t.progressPercent < 100
          span.torrent-progress #{t.progressPercent}%
        else if t.pendingCategorization
          span.torrent-category.pending Выберите
        else if t.currentCategory === 'tv-shows'
          span.torrent-category.tv-shows Сериалы
        else if t.currentCategory === 'movies'
          span.torrent-category.movies Фильмы
    .expand-btn(onclick="toggleTorrent(this)") Ещё
    .torrent-details
      .torrent-actions
        if t.showMoveButtons || t.currentCategory
          if t.suggestTvShows && t.showMoveButtons
            button.action-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this); event.stopPropagation();` data-name=t.name) Переместить в Сериалы
          else if t.showMoveButtons
            button.action-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this); event.stopPropagation();` data-name=t.name) Переместить в Сериалы
            button.action-btn(onclick=`moveTorrent('${t.hash}', 'movies', this); event.stopPropagation();` data-name=t.name) Переместить в Фильмы
          else if t.currentCategory === 'tv-shows'
            button.action-btn(onclick=`moveTorrent('${t.hash}', 'movies', this); event.stopPropagation();` data-name=t.name) Переместить в Фильмы
          else if t.currentCategory === 'movies'
            button.action-btn(onclick=`moveTorrent('${t.hash}', 'tv-shows', this); event.stopPropagation();` data-name=t.name) Переместить в Сериалы
        if t.canManage
          button.action-btn(onclick=`renameTorrent('${t.hash}', '${t.name.replace(/'/g, "\\'")}'); event.stopPropagation();`) Переименовать
          button.action-btn.danger(onclick=`deleteTorrent('${t.hash}', '${t.displayName.replace(/'/g, "\\'")}'); event.stopPropagation();` title="Удалить")
