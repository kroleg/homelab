      if t.files && t.files.length > 0
        .torrent-files
          .torrent-files-header Файлы (#{t.files.length})
          each file in t.files
            .torrent-file
              span.torrent-file-name= file.name
              span.torrent-file-size= file.displaySize
      .collapse-btn(onclick="toggleTorrent(this); event.stopPropagation();") Свернуть

  script.
    function toggleSection(idx) {
      const content = document.getElementById(`section-${idx}`);
      const toggle = document.getElementById(`toggle-${idx}`);
      const isExpanded = content.classList.contains('expanded');

      if (isExpanded) {
        content.classList.remove('expanded');
        toggle.classList.remove('expanded');
      } else {
        content.classList.add('expanded');
        toggle.classList.add('expanded');
      }
    }

    function toggleTorrent(el) {
      const card = el.closest('.torrent-card');
      card.classList.toggle('expanded');
    }

    async function renameTorrent(hash, currentName) {
      const newName = prompt('Новое имя:', currentName);
      if (!newName || newName === currentName) return;
      try {
        const response = await fetch(`/api/rename/${hash}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name: newName })
        });
        if (response.ok) {
          const card = document.querySelector(`.torrent-card[data-hash="${hash}"]`);
          if (card) {
            const nameEl = card.querySelector('.torrent-name');
            if (nameEl) nameEl.textContent = newName;
          }
        } else {
          alert('Ошибка переименования');
        }
      } catch (err) {
        alert('Ошибка переименования');
      }
    }

    async function deleteTorrent(hash, name) {
      if (!confirm(`Удалить "${name}"?`)) return;
      try {
        const response = await fetch(`/api/delete/${hash}`, { method: 'POST' });
        if (response.ok) {
          const card = document.querySelector(`.torrent-card[data-hash="${hash}"]`);
          if (card) card.remove();
          checkEmptyState();
        } else {
          alert('Ошибка удаления');
        }
      } catch (err) {
        alert('Ошибка удаления');
      }
    }

    async function moveTorrent(hash, category, btn) {
      const name = btn.dataset.name;
      btn.disabled = true;
      btn.textContent = '...';
      try {
        const response = await fetch(`/api/move/${hash}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ category, name })
        });
        if (response.ok) {
          const card = document.querySelector(`.torrent-card[data-hash="${hash}"]`);
          if (card) {
            card.classList.remove('pending-category');
            const actions = card.querySelector('.torrent-actions');
            if (actions) {
              const moveButtons = actions.querySelectorAll('.action-btn:not(.danger)');
              moveButtons.forEach(b => {
                if (b.textContent.includes('Переместить')) b.remove();
              });
            }
            const categoryEl = card.querySelector('.torrent-category');
            if (categoryEl) {
              categoryEl.className = 'torrent-category ' + category;
              categoryEl.textContent = category === 'tv-shows' ? 'Сериалы' : 'Фильмы';
            }
          }
        } else {
          alert('Ошибка перемещения');
          btn.disabled = false;
          btn.textContent = category === 'tv-shows' ? 'Переместить в Сериалы' : 'Переместить в Фильмы';
        }
      } catch (err) {
        alert('Ошибка перемещения');
        btn.disabled = false;
        btn.textContent = category === 'tv-shows' ? 'Переместить в Сериалы' : 'Переместить в Фильмы';
      }
    }

    function checkEmptyState() {
      const list = document.querySelector('.torrent-list');
      const cards = list.querySelectorAll('.torrent-card');
      if (cards.length === 0 && !list.querySelector('.empty-state')) {
        list.innerHTML = '<div class="empty-state">Нет активных загрузок</div>';
      }
    }

    async function pollTorrents() {
      try {
        const response = await fetch('/api/torrents');
        if (!response.ok) return;

        const torrents = await response.json();

        for (const t of torrents) {
          const card = document.querySelector(`.torrent-card[data-hash="${t.hash}"]`);
          if (!card) continue;

          // Update progress background
          card.style.setProperty('--progress', t.progress + '%');

          // Update progress text
          const oldProgress = card.dataset.progress;
          if (oldProgress !== String(t.progress)) {
            const progressEl = card.querySelector('.torrent-progress');
            if (progressEl) {
              progressEl.textContent = t.progress + '%';
            }
            card.dataset.progress = t.progress;

            // Hide progress, show pending badge when complete
            if (t.progress === 100 && oldProgress !== '100') {
              if (progressEl) progressEl.style.display = 'none';
              const meta = card.querySelector('.torrent-meta');
              if (meta && !meta.querySelector('.torrent-category')) {
                const badge = document.createElement('span');
                badge.className = 'torrent-category pending';
                badge.textContent = 'Выберите';
                meta.appendChild(badge);
                card.classList.add('pending-category');
              }
            }
          }

          // Update state
          const oldState = card.dataset.state;
          if (oldState !== t.state) {
            card.dataset.state = t.state;
          }
        }
      } catch (err) {
        // Ignore polling errors
      }
    }

    setInterval(pollTorrents, 3000);
