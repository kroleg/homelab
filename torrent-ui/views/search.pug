extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 2rem 1rem;
      max-width: 40rem;
      margin: 0 auto;
      width: 100%;
    }
    .header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .title {
      font-size: 1.5rem;
      font-weight: 700;
    }
    .search-form {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
    .search-form input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      outline: none;
    }
    .search-form input:focus {
      border-color: var(--primary);
    }
    .search-form button {
      padding: 0.75rem 1rem;
      background: var(--primary);
      color: var(--primary-fg);
      border: none;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      white-space: nowrap;
    }
    .search-form button:hover {
      opacity: 0.9;
    }
    .search-form button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .results {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .result-card {
      background: var(--secondary);
      border-radius: 0.5rem;
      overflow: hidden;
    }
    .result-header {
      padding: 0.75rem 1rem;
      display: flex;
      gap: 0.75rem;
      align-items: flex-start;
      cursor: pointer;
      transition: background 0.15s;
    }
    .result-header:hover {
      background: rgba(0,0,0,0.03);
    }
    .result-card.expanded .result-header {
      border-bottom: 1px solid #e5e7eb;
    }
    .result-left {
      flex: 1;
      min-width: 0;
    }
    .result-title {
      font-weight: 500;
      font-size: 0.875rem;
      word-break: break-word;
    }
    .result-right {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.375rem;
      flex-shrink: 0;
      font-size: 0.75rem;
    }
    .result-size {
      color: var(--muted);
    }
    .result-peers {
      display: flex;
      gap: 0.5rem;
    }
    .result-seeds {
      color: var(--success);
      font-weight: 500;
    }
    .result-leeches {
      color: var(--warning);
      font-weight: 500;
    }
    .dl-btn {
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      background: #fff;
      cursor: pointer;
      transition: background 0.15s, border-color 0.15s;
      white-space: nowrap;
    }
    .dl-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .dl-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .result-details {
      display: none;
      padding: 0.75rem 1rem;
      font-size: 0.8125rem;
      background: #fafafa;
    }
    .result-card.expanded .result-details {
      display: block;
    }
    .result-details.loading {
      display: block;
      color: var(--muted);
      padding: 1rem;
    }
    .detail-category {
      color: var(--primary);
      font-weight: 500;
      margin-bottom: 0.5rem;
    }
    .detail-registered {
      color: var(--muted);
      font-size: 0.75rem;
      margin-bottom: 0.75rem;
    }
    .detail-image {
      max-width: 100%;
      max-height: 200px;
      border-radius: 0.25rem;
      margin-bottom: 0.75rem;
      object-fit: contain;
    }
    .detail-description {
      white-space: pre-wrap;
      word-break: break-word;
      line-height: 1.5;
      margin-bottom: 0.75rem;
      max-height: 200px;
      overflow-y: auto;
      color: #444;
    }
    .detail-files {
      margin-top: 0.5rem;
    }
    .detail-files-header {
      font-weight: 500;
      margin-bottom: 0.375rem;
      color: #333;
    }
    .detail-files-list {
      font-family: monospace;
      font-size: 0.75rem;
      max-height: 150px;
      overflow-y: auto;
      background: #fff;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      padding: 0.5rem;
    }
    .detail-file {
      display: flex;
      justify-content: space-between;
      gap: 0.5rem;
      padding: 0.125rem 0;
    }
    .detail-file-name {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .detail-file-size {
      color: var(--muted);
      flex-shrink: 0;
    }
    .detail-actions {
      margin-top: 0.75rem;
      display: flex;
      gap: 0.5rem;
    }
    .expand-icon {
      font-size: 0.75rem;
      color: var(--muted);
      transition: transform 0.2s;
    }
    .result-card.expanded .expand-icon {
      transform: rotate(180deg);
    }
    .empty-state {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .loading {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .error-msg {
      background: #fee2e2;
      color: #b91c1c;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

  .container
    .search-form
      input#search-input(type="text" placeholder="Название..." autofocus onkeydown="if(event.key==='Enter')doSearch()")
      button#search-btn(onclick="doSearch()") Найти

    #error-container
    #loading.loading(style="display:none") Поиск...
    #results.results

  script.
    function formatSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      var kb = bytes / 1024;
      if (kb < 1024) return kb.toFixed(1) + ' KB';
      var mb = kb / 1024;
      if (mb < 1024) return mb.toFixed(1) + ' MB';
      var gb = mb / 1024;
      return gb.toFixed(1) + ' GB';
    }

    async function doSearch() {
      var input = document.getElementById('search-input');
      var query = input.value.trim();
      if (!query) return;

      var btn = document.getElementById('search-btn');
      var loading = document.getElementById('loading');
      var results = document.getElementById('results');
      var errorContainer = document.getElementById('error-container');

      btn.disabled = true;
      loading.style.display = '';
      results.innerHTML = '';
      errorContainer.innerHTML = '';

      try {
        var response = await fetch('/api/search?q=' + encodeURIComponent(query));
        if (!response.ok) {
          var errData = await response.json().catch(function() { return {}; });
          throw new Error(errData.error || 'Ошибка поиска');
        }

        var data = await response.json();
        loading.style.display = 'none';
        btn.disabled = false;

        if (data.length === 0) {
          results.innerHTML = '<div class="empty-state">Ничего не найдено</div>';
          return;
        }

        var html = '';
        for (var i = 0; i < data.length; i++) {
          var r = data[i];
          html += '<div class="result-card" id="card-' + r.id + '">';
          html += '<div class="result-header" onclick="toggleDetails(\'' + r.id + '\', event)">';
          html += '<div class="result-left">';
          html += '<div class="result-title">' + escapeHtml(r.title) + '</div>';
          html += '</div>';
          html += '<div class="result-right">';
          html += '<span class="result-size">' + formatSize(r.size) + '</span>';
          html += '<div class="result-peers">';
          html += '<span class="result-seeds">S: ' + r.seeds + '</span>';
          html += '<span class="result-leeches">L: ' + r.leeches + '</span>';
          html += '</div>';
          html += '<span class="expand-icon">▼</span>';
          html += '</div>';
          html += '</div>';
          html += '<div class="result-details" id="details-' + r.id + '" data-title="' + escapeAttr(r.title) + '"></div>';
          html += '</div>';
        }
        results.innerHTML = html;
      } catch (err) {
        loading.style.display = 'none';
        btn.disabled = false;
        errorContainer.innerHTML = '<div class="error-msg">' + escapeHtml(err.message || 'Ошибка поиска') + '</div>';
      }
    }

    function escapeHtml(str) {
      var div = document.createElement('div');
      div.textContent = str;
      return div.innerHTML;
    }

    function escapeAttr(str) {
      return str.replace(/&/g, '&amp;').replace(/"/g, '&quot;').replace(/'/g, '&#39;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
    }

    var loadedDetails = {};

    async function toggleDetails(id, event) {
      var card = document.getElementById('card-' + id);
      var details = document.getElementById('details-' + id);

      if (card.classList.contains('expanded')) {
        card.classList.remove('expanded');
        return;
      }

      card.classList.add('expanded');

      if (loadedDetails[id]) {
        return;
      }

      details.innerHTML = 'Загрузка...';
      details.classList.add('loading');

      try {
        var response = await fetch('/api/search/details/' + id);
        if (!response.ok) {
          var errData = await response.json().catch(function() { return {}; });
          throw new Error(errData.error || 'Ошибка загрузки');
        }

        var data = await response.json();
        loadedDetails[id] = data;
        details.classList.remove('loading');
        renderDetails(id, data);
      } catch (err) {
        details.classList.remove('loading');
        details.innerHTML = '<div style="color:#b91c1c">' + escapeHtml(err.message || 'Ошибка загрузки') + '</div>';
      }
    }

    function renderDetails(id, data) {
      var details = document.getElementById('details-' + id);
      var title = details.dataset.title;
      var html = '';

      if (data.category) {
        html += '<div class="detail-category">' + escapeHtml(data.category) + '</div>';
      }

      if (data.registered) {
        html += '<div class="detail-registered">Добавлен: ' + escapeHtml(data.registered) + '</div>';
      }

      if (data.imageUrl) {
        html += '<img class="detail-image" src="' + escapeAttr(data.imageUrl) + '" alt="" loading="lazy" onerror="this.style.display=\'none\'">';
      }

      if (data.description) {
        html += '<div class="detail-description">' + escapeHtml(data.description) + '</div>';
      }

      if (data.files && data.files.length > 0) {
        html += '<div class="detail-files">';
        html += '<div class="detail-files-header">Файлы (' + data.files.length + '):</div>';
        html += '<div class="detail-files-list">';
        for (var i = 0; i < data.files.length && i < 50; i++) {
          var f = data.files[i];
          html += '<div class="detail-file">';
          html += '<span class="detail-file-name">' + escapeHtml(f.name) + '</span>';
          if (f.size > 0) {
            html += '<span class="detail-file-size">' + formatSize(f.size) + '</span>';
          }
          html += '</div>';
        }
        if (data.files.length > 50) {
          html += '<div style="color:var(--muted);padding-top:0.25rem">...и ещё ' + (data.files.length - 50) + ' файлов</div>';
        }
        html += '</div>';
        html += '</div>';
      }

      html += '<div class="detail-actions">';
      html += '<button class="dl-btn" onclick="downloadResult(\'' + id + '\', this)" data-title="' + escapeAttr(title) + '">Скачать</button>';
      html += '</div>';

      details.innerHTML = html;
    }

    async function downloadResult(id, btn) {
      var title = btn.dataset.title;
      btn.disabled = true;
      btn.textContent = '...';

      try {
        var response = await fetch('/api/search/download', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: id, name: title })
        });

        if (response.ok) {
          window.location.href = '/';
        } else {
          alert('Ошибка скачивания');
          btn.disabled = false;
          btn.textContent = 'Скачать';
        }
      } catch (err) {
        alert('Ошибка скачивания');
        btn.disabled = false;
        btn.textContent = 'Скачать';
      }
    }
