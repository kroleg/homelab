extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 2rem 1rem;
      max-width: 40rem;
      margin: 0 auto;
      width: 100%;
    }
    .header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .title {
      font-size: 1.5rem;
      font-weight: 700;
    }
    .search-form {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
    .search-form input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      outline: none;
    }
    .search-form input:focus {
      border-color: var(--primary);
    }
    .search-form button {
      padding: 0.75rem 1rem;
      background: var(--primary);
      color: var(--primary-fg);
      border: none;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      white-space: nowrap;
    }
    .search-form button:hover {
      opacity: 0.9;
    }
    .search-form button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .results {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .result-card {
      background: var(--secondary);
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      display: flex;
      gap: 0.75rem;
      align-items: flex-start;
    }
    .result-left {
      flex: 1;
      min-width: 0;
    }
    .result-title {
      font-weight: 500;
      font-size: 0.875rem;
      word-break: break-word;
    }
    .result-right {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.375rem;
      flex-shrink: 0;
      font-size: 0.75rem;
    }
    .result-size {
      color: var(--muted);
    }
    .result-peers {
      display: flex;
      gap: 0.5rem;
    }
    .result-seeds {
      color: var(--success);
      font-weight: 500;
    }
    .result-leeches {
      color: var(--warning);
      font-weight: 500;
    }
    .dl-btn {
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.25rem;
      background: #fff;
      cursor: pointer;
      transition: background 0.15s, border-color 0.15s;
      white-space: nowrap;
    }
    .dl-btn:hover {
      background: var(--primary-fg);
      border-color: var(--primary);
    }
    .dl-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .empty-state {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .loading {
      text-align: center;
      color: var(--muted);
      padding: 2rem;
    }
    .error-msg {
      background: #fee2e2;
      color: #b91c1c;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

  .container
    .search-form
      input#search-input(type="text" placeholder="Название..." autofocus onkeydown="if(event.key==='Enter')doSearch()")
      button#search-btn(onclick="doSearch()") Найти

    #error-container
    #loading.loading(style="display:none") Поиск...
    #results.results

  script.
    function formatSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      var kb = bytes / 1024;
      if (kb < 1024) return kb.toFixed(1) + ' KB';
      var mb = kb / 1024;
      if (mb < 1024) return mb.toFixed(1) + ' MB';
      var gb = mb / 1024;
      return gb.toFixed(1) + ' GB';
    }

    async function doSearch() {
      var input = document.getElementById('search-input');
      var query = input.value.trim();
      if (!query) return;

      var btn = document.getElementById('search-btn');
      var loading = document.getElementById('loading');
      var results = document.getElementById('results');
      var errorContainer = document.getElementById('error-container');

      btn.disabled = true;
      loading.style.display = '';
      results.innerHTML = '';
      errorContainer.innerHTML = '';

      try {
        var response = await fetch('/api/search?q=' + encodeURIComponent(query));
        if (!response.ok) {
          var errData = await response.json().catch(function() { return {}; });
          throw new Error(errData.error || 'Ошибка поиска');
        }

        var data = await response.json();
        loading.style.display = 'none';
        btn.disabled = false;

        if (data.length === 0) {
          results.innerHTML = '<div class="empty-state">Ничего не найдено</div>';
          return;
        }

        var html = '';
        for (var i = 0; i < data.length; i++) {
          var r = data[i];
          html += '<div class="result-card">';
          html += '<div class="result-left">';
          html += '<div class="result-title">' + escapeHtml(r.title) + '</div>';
          html += '</div>';
          html += '<div class="result-right">';
          html += '<span class="result-size">' + formatSize(r.size) + '</span>';
          html += '<div class="result-peers">';
          html += '<span class="result-seeds">S: ' + r.seeds + '</span>';
          html += '<span class="result-leeches">L: ' + r.leeches + '</span>';
          html += '</div>';
          html += '<button class="dl-btn" onclick="downloadResult(\'' + r.id + '\', this)" data-title="' + escapeAttr(r.title) + '">Скачать</button>';
          html += '</div>';
          html += '</div>';
        }
        results.innerHTML = html;
      } catch (err) {
        loading.style.display = 'none';
        btn.disabled = false;
        errorContainer.innerHTML = '<div class="error-msg">' + escapeHtml(err.message || 'Ошибка поиска') + '</div>';
      }
    }

    function escapeHtml(str) {
      var div = document.createElement('div');
      div.textContent = str;
      return div.innerHTML;
    }

    function escapeAttr(str) {
      return str.replace(/&/g, '&amp;').replace(/"/g, '&quot;').replace(/'/g, '&#39;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
    }

    async function downloadResult(id, btn) {
      var title = btn.dataset.title;
      btn.disabled = true;
      btn.textContent = '...';

      try {
        var response = await fetch('/api/search/download', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: id, name: title })
        });

        if (response.ok) {
          window.location.href = '/';
        } else {
          alert('Ошибка скачивания');
          btn.disabled = false;
          btn.textContent = 'Скачать';
        }
      } catch (err) {
        alert('Ошибка скачивания');
        btn.disabled = false;
        btn.textContent = 'Скачать';
      }
    }
