mixin deviceIcon(type, statusClass)
  - const cls = 'device-icon ' + (statusClass || '')
  case type
    when 'phone'
      svg(class=cls viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        rect(x="5" y="2" width="14" height="20" rx="2" ry="2")
        line(x1="12" y1="18" x2="12.01" y2="18")
    when 'tablet'
      svg(class=cls viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        rect(x="2" y="4" width="20" height="16" rx="2" ry="2")
        line(x1="18" y1="12" x2="18.01" y2="12")
    when 'laptop'
      svg(class=cls viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        rect(x="2" y="4" width="20" height="12" rx="2" ry="2")
        line(x1="2" y1="20" x2="22" y2="20")
    when 'desktop'
      svg(class=cls viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        rect(x="2" y="3" width="20" height="14" rx="2" ry="2")
        line(x1="8" y1="21" x2="16" y2="21")
        line(x1="12" y1="17" x2="12" y2="21")
    when 'watch'
      svg(class=cls viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        circle(cx="12" cy="12" r="6")
        polyline(points="12 9 12 12 14 14")
        path(d="M9 18h6l1 4H8l1-4z")
        path(d="M9 6h6l1-4H8l1 4z")
    when 'tv'
      svg(class=cls viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
        rect(x="2" y="7" width="20" height="15" rx="2" ry="2")
        polyline(points="17 2 12 7 7 2")
    default
      //- 'other' type - no icon, just use the status dot
