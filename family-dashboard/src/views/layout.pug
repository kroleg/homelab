doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    style.
      * { box-sizing: border-box; margin: 0; padding: 0; }
      :root {
        --background: #fff;
        --foreground: #0a0a0b;
        --primary: #e11d48;
        --primary-fg: #fff1f2;
        --secondary: #f4f4f5;
        --secondary-fg: #18181b;
        --muted: #71717a;
      }
      body {
        font-family: system-ui, -apple-system, sans-serif;
        background: var(--background);
        color: var(--foreground);
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
      }
  body
    block content
