extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem 1rem;
    }
    .card {
      width: 100%;
      max-width: 20rem;
    }
    .profile-section {
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid #e4e4e7;
      text-align: center;
    }
    .profile-name a {
      font-size: 1rem;
      font-weight: 500;
      color: #fb7185;
      text-decoration: none;
    }
    .profile-name a:hover {
      color: var(--primary);
    }
    .section-header {
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
    }
    .links {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    .link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      width: 100%;
      padding: 1rem;
      font-size: 1rem;
      font-weight: 500;
      border-radius: 0.5rem;
      text-decoration: none;
      transition: background 0.15s;
      background: var(--secondary);
      color: var(--secondary-fg);
    }
    .link:hover {
      background: #e4e4e7;
    }
    .link-icon {
      width: 1.5rem;
      height: 1.5rem;
      flex-shrink: 0;
    }
    .link-icon svg {
      width: 1.5rem;
      height: 1.5rem;
      stroke: var(--muted);
    }
    .link-content {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }
    .link-name {
      font-weight: 500;
      line-height: 1.25;
    }
    .link-desc {
      font-size: 0.75rem;
      color: var(--muted);
      font-weight: 400;
    }
    .admin-section {
      margin-top: 1.5rem;
      padding-top: 1rem;
      border-top: 1px solid #e4e4e7;
    }
    .admin-header {
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
    }
    .admin-link {
      background: #fef3c7;
    }
    .admin-link:hover {
      background: #fde68a;
    }
  .container
    .card
      if currentUser
        .profile-section
          .profile-name
            a(href="/me")= currentUser.name

      .section-header Сервисы
      .links
        each service in services
          a.link(href=service.url)
            .link-icon
              svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2")
                path(stroke-linecap="round" stroke-linejoin="round" d=service.icon)
            .link-content
              .link-name= service.name
              .link-desc= service.description

      if adminServices && adminServices.length > 0
        .admin-section
          .admin-header Админ
          .links
            each service in adminServices
              a.link.admin-link(href=service.url)
                .link-icon
                  svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2")
                    path(stroke-linecap="round" stroke-linejoin="round" d=service.icon)
                .link-content
                  .link-name= service.name
                  .link-desc= service.description
