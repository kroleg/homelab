extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem 1rem;
    }
    .groups {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      width: 100%;
      max-width: 28rem;
    }
    .group-section {
      background: var(--secondary);
      border-radius: 0.75rem;
      overflow: hidden;
      box-shadow: var(--card-shadow);
    }
    .group-section.unowned {
      opacity: 0.7;
    }
    .group-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.875rem 1rem;
      background: #e4e4e7;
    }
    .group-name {
      font-size: 1rem;
      font-weight: 600;
    }
    .group-stats {
      display: flex;
      align-items: center;
      gap: 0.375rem;
      font-size: 0.75rem;
      color: var(--muted);
    }
    .online-dot {
      width: 0.5rem;
      height: 0.5rem;
      border-radius: 50%;
      background: var(--success);
    }
    .online-count {
      color: var(--success);
      font-weight: 500;
    }
    .devices {
      display: flex;
      flex-direction: column;
    }
    .device-row {
      display: flex;
      align-items: center;
      gap: 0.625rem;
      padding: 0.625rem 1rem;
      border-top: 1px solid #e4e4e7;
    }
    .device-row:first-child {
      border-top: none;
    }
    .status-dot {
      width: 0.5rem;
      height: 0.5rem;
      border-radius: 50%;
      flex-shrink: 0;
    }
    .status-dot.online { background: var(--success); }
    .status-dot.offline { background: var(--muted); opacity: 0.4; }
    .device-info {
      flex: 1;
      min-width: 0;
    }
    .device-name {
      font-size: 0.875rem;
      font-weight: 500;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .device-details {
      font-size: 0.625rem;
      color: var(--muted);
      margin-top: 0.125rem;
    }
    .device-policy {
      font-size: 0.625rem;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      background: #dbeafe;
      color: #1e40af;
      flex-shrink: 0;
    }
    .empty-message {
      padding: 1rem;
      text-align: center;
      color: var(--muted);
      font-size: 0.875rem;
    }

  mixin deviceList(devices)
    if devices.length === 0
      .empty-message Нет устройств
    else
      each device in devices
        .device-row
          span.status-dot(class=device.online ? 'online' : 'offline')
          .device-info
            .device-name= device.name
            .device-details
              span= device.mac
              if device.ip
                span= ` • ${device.ip}`
          if device.policy
            span.device-policy= device.policy

  .container
    .groups
      each child in children
        .group-section
          .group-header
            span.group-name= child.name
            span.group-stats
              if child.onlineCount > 0
                span.online-dot
                span.online-count= child.onlineCount
              span= `/ ${child.devices.length}`
          .devices
            +deviceList(child.devices)

      if unowned && unowned.devices.length > 0
        .group-section.unowned
          .group-header
            span.group-name= unowned.name
            span.group-stats
              if unowned.onlineCount > 0
                span.online-dot
                span.online-count= unowned.onlineCount
              span= `/ ${unowned.devices.length}`
          .devices
            +deviceList(unowned.devices)
