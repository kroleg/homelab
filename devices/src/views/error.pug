extends layout

block content
  style.
    .container {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem 1rem;
      text-align: center;
    }
    h1 {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--primary);
      margin-bottom: 0.75rem;
    }
    .message {
      color: var(--muted);
      font-size: 1rem;
    }
    .home-link {
      margin-top: 1.5rem;
      color: var(--primary);
      text-decoration: none;
      font-size: 0.875rem;
    }
    .home-link:hover {
      text-decoration: underline;
    }

  .container
    h1= title
    p.message= message
    a.home-link(href="http://dom.internal") ← Вернуться на главную
